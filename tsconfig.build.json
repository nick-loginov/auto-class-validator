{
    "include": ["lib/**/*"],
    "compilerOptions": {
      "module": "commonjs",
      "declaration": true,
      "noImplicitAny": false,
      "removeComments": true,
      "noLib": false,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "target": "es6",
      "declarationMap": false,
      "sourceMap": false,
      "outDir": "./dist",
      "rootDir": "./lib",
      "skipLibCheck": true
    },
  }
  
  