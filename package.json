{
  "name": "auto-class-validator",
  "version": "1.0.0",
  "description": "Automatic class-validator integration via typescript transformers, use it with @nestjs/swagger for better experience ",
  "keywords": ["class-validator", "nestjs", "validation", "validator", "automatic"],
  "repository": {
    "type": "git",
    "url": "https://github.com/nick-loginov/auto-class-validator"
  },
  "types": "dist/index.d.ts",
  "files": [
    "./dist/**"
  ],
  "exports": {
    ".": "./dist/index.js",
    "./plugin.js": "./dist/plugin.js"
  },
  "scripts": {
    "build": "rimraf ./dist && tsc -p tsconfig.build.json",
    "build:watch": "tsc --watch -p tsconfig.build.json",
    "build:dev:watch": "tsc --watch",
    "test": "jest",
    "e2e": "jest --config=jest.e2e.config.json"
  },
  "author": "Nick Loginov",
  "license": "MIT",
  "devDependencies": {
    "@nestjs/class-validator": "^0.13.4",
    "@nestjs/swagger": "^7.4.2",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.12.4",
    "esbuild": "^0.20.2",
    "jest": "^29.7.0",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.1.2",
    "ts-patch": "^3.1.2",
    "ttsc": "^0.3.1",
    "ttypescript": "^1.5.15"
  },
  "dependencies": {
    "@nestjs/class-transformer": "^0.4.0",
    "lodash": "^4.17.21",
    "reflect-metadata": "^0.2.2",
    "typescript": "^5.4.4"
  }
}
